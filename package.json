{
  "name": "craft_cms_boilerplate_project",
  "version": "0.0.1",
  "description": "Boilerplate for Craft CMS 2.x projects, with NPM build tools",
  "main": "",
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": ["craft cms", "npm"],
  "author": "Glynn Smith <glynn.smith@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": ""
  },
  "homepage": "",
  "devDependencies": {
    "ajv": "^5.5.2",
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "basicscroll": "^2.1.1",
    "browser-sync": "^2.12.8",
    "copyfiles": "^2.0.0",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^5.3.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-standard": "^1.3.2",
    "gsap": "^1.20.4",
    "imagemin-cli": "^3.0.0",
    "imagemin-gifsicle": "^5.2.0",
    "imagemin-mozjpeg": "^7.0.0",
    "imagemin-pngquant": "^5.1.0",
    "imagemin-svgo": "^6.0.0",
    "node-sass": "^3.7.0",
    "node-sass-glob-importer": "^5.1.2",
    "normalize.css": "^8.0.0",
    "npm-run-all": "^2.1.1",
    "onchange": "^2.4.0",
    "postcss-cli": "^2.5.2",
    "prettier": "^1.11.1",
    "rimraf": "^2.5.4",
    "sass-mq": "^4.0.2",
    "stylelint": "^9.2.0",
    "susy": "^3.0.3",
    "svgo": "^0.6.6",
    "uglify-js": "^2.6.2"
  },
  "scripts": {
    "//_clean": "Cleans destination directories for fresh deployment",
    "clean": "echo \"\nCleaning build directories \n\" && rimraf craft && rimraf public",

    "//_basefiles": "Copies craft basefiles to directories used for serving",
    "basefiles:craft": "cp -rf 01_src/craft_base/craft ./",
    "basefiles:public": "cp -rf 01_src/craft_base/public ./",
    "basefiles:templates": "mkdir -p craft/templates/01_base craft/templates/02_elements craft/templates/03_blocks craft/templates/04_globals craft/templates/05_pages craft/templates/06_macros craft/templates/07_wrappers",

    "//_images": "Image optimisation",
    "images:icons": "imagemin --plugin=svgo 01_src/images/icons/*.svg --out-dir=public/assets/images/icons",
    "images:svg": "imagemin --plugin=svgo 01_src/images/*.svg --out-dir=public/assets/images/",
    "images:jpg": "imagemin --plugin=mozjpeg 01_src/images/*.jpg --out-dir=public/assets/images/",
    "images:png": "imagemin --plugin=pngquant 01_src/images/*.png --out-dir=public/assets/images/",
    "images:gif": "imagemin --plugin=gifsicle 01_src/images/*.gif --out-dir=public/assets/images/",

    "//_serve": "Files served with browser-sync",
    "serve": "browser-sync start --config 'browsersync-config.js'",

    "//_scss": "Scss file processing",
    "autoprefixer": "postcss -q -u autoprefixer -r public/assets/css/*.css",
    "scss": "node-sass --source-map=true --output-style=expanded --importer=node_modules/node-sass-glob-importer/dist/cli.js -o public/assets/css 01_src/scss",
    "lint-scss": "stylelint 01_src/scss/*.scss --syntax scss || true",

    "//_js": "Javascript file processing",
    "lint-js": "eslint 01_src/js || true",
    "uglify": "mkdir -p public/assets/js && uglifyjs 01_src/js/*.js -m -o public/assets/js/app.js && uglifyjs 01_src/js/*.js -m -c -o public/assets/js/app.min.js",

    "//_build": "Building and copying files",
    "build:basefiles": "run-p basefiles:*",
    "build:css": "run-s scss autoprefixer",
    "build:js": "run-s lint-js uglify",
    "build:images": "run-p images:*",
    "build:favicons": "copyfiles -f 01_src/favicons/* ./public",

    "build:twig_base": "copyfiles -f 01_src/templates/01_base/**/**/*.{twig,html} craft/templates/01_base",
    "build:twig_elements": "copyfiles -f 01_src/templates/02_elements/**/**/*.{twig,html} craft/templates/02_elements",
    "build:twig_blocks": "copyfiles -f 01_src/templates/03_blocks/**/**/*.{twig,html} craft/templates/03_blocks",
    "build:twig_globals": "copyfiles -f 01_src/templates/04_globals/**/**/*.{twig,html} craft/templates/04_globals",
    "build:twig_pages": "copyfiles -f 01_src/templates/05_pages/**/**/*.{twig,html} craft/templates/05_pages",
    "build:twig_macros": "copyfiles -f 01_src/templates/06_macros/**/**/*.{twig,html} craft/templates/06_macros",
    "build:twig_wrappers": "copyfiles -f 01_src/templates/07_wrappers/**/**/*.{twig,html} craft/templates/07_wrappers",

    "build": "echo \"\nCreating build directories, then processing/copying files \n\" && run-s build:*",

    "//_watch": "Watching for file changes",
    "watch:css": "onchange \"01_src/scss\" \"01_src/templates/01_base/**/**/*.scss\" \"01_src/templates/02_elements/**/**/*.scss\" \"01_src/templates/03_blocks/**/**/*.scss\" \"01_src/templates/04_globals/**/**/*.scss\" \"01_src/templates/05_pages/**/**/*.scss\" \"01_src/templates/06_macros/**/**/*.scss\" \"01_src/templates/07_wrappers/**/**/*.scss\" -- run-s build:css",

    "watch:js": "onchange \"01_src/js\" -- run-s build:js",

    "watch:images_icons": "onchange \"01_src/images/icons\" -- run-s images:icons",
    "watch:images_svg": "onchange \"01_src/images/*.svg, !01_src/images/icons/*.svg\" -- run-s images:svg",
    "watch:images_jpg": "onchange \"01_src/images/*.jpg\" -- run-s images:jpg",
    "watch:images_png": "onchange \"01_src/images/*.png\" -- run-s images:png",
    "watch:images_gif": "onchange \"01_src/images/*.gif\" -- run-s images:gif",

    "watch:basefiles_craft": "onchange \"01_src/craft_base/craft/**/*\" -- run-s basefiles:craft",
    "watch:basefiles_public": "onchange \"01_src/craft_base/public/**/*\" -- run-s basefiles:public",

    "watch:twig_base": "onchange \"01_src/templates/01_base/**/**/*.{twig,html}\" -- run-s build:twig_base",
    "watch:twig_elements": "onchange \"01_src/templates/02_elements/**/**/*.{twig,html}\" -- run-s build:twig_elements",
    "watch:twig_blocks": "onchange \"01_src/templates/03_blocks/**/**/*.{twig,html}\" -- run-s build:twig_blocks",
    "watch:twig_globals": "onchange \"01_src/templates/04_globals/**/**/*.{twig,html}\" -- run-s build:twig_globals",
    "watch:twig_pages": "onchange \"01_src/templates/05_pages/**/**/*.{twig,html}\" -- run-s build:twig_pages",
    "watch:twig_macros": "onchange \"01_src/templates/06_macros/**/**/*.{twig,html}\" -- run-s build:twig_macros",
    "watch:twig_wrappers": "onchange \"01_src/templates/07_wrappers/**/**/*.{twig,html}\" -- run-s build:twig_wrappers",
    "watch": "echo \"\nWatching files...\n\" && run-p -s serve watch:*",

    "//_start": "Cleans, builds and watches ",
    "start": "echo \"\nHello. Beginning tasks...\n\" && run-s --silent clean build watch",

    "//_postinstall": "Auto-removes duplicate dependencies after npm install",
    "postinstall": "npm dedupe"
  }
}
